{
  "version": 2,
  "buildCommand": "pnpm install && pnpm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "installCommand": "pnpm install --no-frozen-lockfile",
  "env": {
    "NEXT_TELEMETRY_DISABLED": "1",
    "NODE_OPTIONS": "--max-old-space-size=2048"
  },
  "regions": ["iad1"],
  "github": {
    "enabled": true,
    "silent": false
  }
}
